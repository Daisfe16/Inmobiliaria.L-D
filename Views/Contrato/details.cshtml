@model InmobiliariaMVC.Models.Contrato

@{
    ViewData["Title"] = "Detalle del Contrato";
}

<h2>Detalle del Contrato</h2>

<div>
    <strong>Inquilino:</strong> @Model.Inquilino?.nombre @Model.Inquilino?.apellido
</div>
<div>
    <strong>Inmueble:</strong> @Model.Inmueble?.direccion
</div>
<div>
    <strong>Monto:</strong> @Model.monto
</div>
<div>
    <strong>Fecha desde:</strong> @Model.fecha_inicio.ToString("dd/MM/yyyy")
</div>
<div>
    <strong>Fecha hasta:</strong> @Model.fecha_fin.ToString("dd/MM/yyyy")
</div>
<div>
    <strong>Estado:</strong> @(Model.estado ? "Activo" : "Cerrado")
</div>
<div>
    <strong>Creado por:</strong> @Model.CreatedByUser?.nombre @Model.CreatedByUser?.apellido
</div>
<div>
    <strong>Fecha creaci√≥n:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")
</div>
<div>
    <strong>Finalizado por:</strong> @Model.ClosedByUser?.nombre @Model.ClosedByUser?.apellido
</div>
<div>
    <strong>Fecha cierre:</strong> @(Model.ClosedAt?.ToString("dd/MM/yyyy") ?? "-")
</div>

