@model InmobiliariaMVC.Models.Inmueble

@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<h2>Detalles del Inmueble</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Direcci√≥n</dt>
        <dd class="col-sm-9">@Model.direccion</dd>

        <dt class="col-sm-3">Uso</dt>
        <dd class="col-sm-9">@Model.uso</dd>

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Model.Tipo.nombre</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">@Model.precio</dd>

        <dt class="col-sm-3">Ambientes</dt>
        <dd class="col-sm-9">@Model.ambiente</dd>

        <dt class="col-sm-3">Disponible</dt>
        <dd class="col-sm-9">@(Model.estado ? "Activo" : "Inactivo")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
