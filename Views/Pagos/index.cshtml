@model IEnumerable<InmobiliariaMVC.Models.Pago>

@{
    ViewBag.Title = "Pagos";
}

<h2>Listado de Pagos</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo pago</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Contrato</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Nro Pago</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id_pago</td>
            <td>@item.id_contrato</td>
            <td>@item.fecha.ToString("dd/MM/yyyy")</td>
            <td>@item.importe</td>
            <td>@item.nro_pago</td>
            <td>@(item.estado ? "Activo" : "Anulado")</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.id_pago">Editar</a>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.id_pago">Ver</a>

                @if (item.estado)
                {
                    <form asp-action="CancelarConfirmed" asp-route-id="@item.id_pago" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-warning">Anular Pago</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
