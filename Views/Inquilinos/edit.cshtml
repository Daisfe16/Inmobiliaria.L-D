@model InmobiliariaMVC.Models.Inquilino

@{
    ViewData["Title"] = "Editar Inquilino";
}

<h1>Editar Inquilino</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id_inquilino" />

    <div class="form-group">
        <label asp-for="nombre"></label>
        <input asp-for="nombre" class="form-control" />
    </div>
    <div class="form-group"></div>
        <label asp-for="apellido"></label>
        <input asp-for="apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="dni"></label>
        <input asp-for="dni" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="telefono"></label>
        <input asp-for="telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="email"></label>
        <input asp-for="email" class="form-control" />
     </div>    
 

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
