@model InmobiliariaMVC.Models.Pago

@{
    ViewBag.Title = "Nuevo Pago";
}

<h2>Nuevo Pago</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="id_contrato">Contrato (Id)</label>
        <input asp-for="id_contrato" class="form-control" />
        <span asp-validation-for="id_contrato" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="fecha">Fecha</label>
        <input asp-for="fecha" class="form-control" type="date" />
        <span asp-validation-for="fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="importe">Importe</label>
        <input asp-for="importe" class="form-control" />
        <span asp-validation-for="importe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="nro_pago">NÃºmero de pago</label>
        <input asp-for="nro_pago" class="form-control" />
        <span asp-validation-for="nro_pago" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="estado" class="form-check-input" />
        <label asp-for="estado" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}