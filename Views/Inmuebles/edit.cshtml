@model InmobiliariaMVC.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}

<h2>Editar Inmueble</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="IdInmueble" />

    <div class="mb-3">
        <label asp-for="Direccion" class="form-label"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Uso" class="form-label"></label>
        <input asp-for="Uso" class="form-control" />
        <span asp-validation-for="Uso" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ambientes" class="form-label"></label>
        <input asp-for="Ambientes" type="number" class="form-control" />
        <span asp-validation-for="Ambientes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Propietario</label>
        <select asp-for="Propietario.id_propietario" class="form-select" asp-items="ViewBag.Propietarios"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <select asp-for="Tipo.id_tipo" class="form-select" asp-items="ViewBag.Tipos"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label"></label>
        <select asp-for="Estado" class="form-select">
            <option value="activo" selected="@Model.Estado == "activo"">Activo</option>
            <option value="inactivo" selected="@Model.Estado == "inactivo"">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
