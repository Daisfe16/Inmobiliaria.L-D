@model InmobiliariaMVC.Models.Inquilino

@{
    ViewData["Title"] = "Nuevo Inquilino";
}

<div class="container mt-4">
    <h1 class="mb-4">Nuevo Inquilino</h1>

    <form asp-action="Create" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="nombre"></label>
                <input asp-for="nombre" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="apellido"></label>
                <input asp-for="apellido" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="dni"></label>
                <input asp-for="dni" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="telefono"></label>
                <input asp-for="telefono" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="email"></label>
            <input asp-for="email" class="form-control" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
