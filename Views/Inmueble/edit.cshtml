@model InmobiliariaMVC.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}

<h2>Editar Inmueble</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="id_inmueble" />

    <div class="mb-3">
        <label asp-for="direccion" class="form-label"></label>
        <input asp-for="direccion" class="form-control" />
        <span asp-validation-for="direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="uso" class="form-label"></label>
        <input asp-for="uso" class="form-control" />
        <span asp-validation-for="uso" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ambiente" class="form-label"></label>
        <input asp-for="ambiente" type="number" class="form-control" />
        <span asp-validation-for="ambiente" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="precio" class="form-label"></label>
        <input asp-for="precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Propietario</label>
        <select asp-for="Propietario.id_propietario" class="form-select" asp-items="ViewBag.Propietarios"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <select asp-for="Tipo.id_tipo" class="form-select" asp-items="ViewBag.Tipos"></select>
    </div>

    <div class="mb-3">
        <label asp-for="estado" class="form-label"></label>
        <select asp-for="estado" class="form-select">
            <option value="activo" selected="@Model.estado == "1"">Activo</option>
            <option value="inactivo" selected="@Model.estado == "0"">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
