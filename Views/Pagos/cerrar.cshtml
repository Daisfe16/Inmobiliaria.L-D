@model InmobiliariaMVC.Models.Pago

@{
    ViewBag.Title = "Anular Pago";
}

<h2>Anular Pago</h2>

<div>
    <p>¿Está seguro que desea anular el siguiente pago?</p>

    <dl class="row">
        <dt class="col-sm-2">Número de Pago</dt>
        <dd class="col-sm-10">@Model.nro_pago</dd>

        <dt class="col-sm-2">Detalle</dt>
        <dd class="col-sm-10">@Model.detalle</dd>

        <dt class="col-sm-2">Importe</dt>
        <dd class="col-sm-10">@Model.importe.ToString("C")</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.fecha.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="CerrarConfirmed" method="post">
        <input type="hidden" asp-for="id_pago" />
        <button type="submit" class="btn btn-danger">Anular Pago</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
    </form>
</div>
