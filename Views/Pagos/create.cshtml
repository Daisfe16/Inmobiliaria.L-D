@model InmobiliariaMVC.Models.Pago
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewBag.Title = "Crear Pago";
}

<h2>Crear Pago</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="id_contrato">Contrato</label>
        <select asp-for="id_contrato" class="form-control" asp-items="ViewBag.Contratos">
            <option value="">-- Seleccione un contrato --</option>
        </select>
        <span asp-validation-for="id_contrato" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="nro_pago">Número de Pago</label>
        <input asp-for="nro_pago" class="form-control" readonly />
        <span asp-validation-for="nro_pago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="fecha">Fecha</label>
        <input asp-for="fecha" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="importe">Importe</label>
        <input asp-for="importe" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="importe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="detalle">Detalle</label>
        <input asp-for="detalle" class="form-control" />
        <span asp-validation-for="detalle" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Actualiza nro de pago automáticamente cuando se selecciona un contrato
        document.querySelector('select[name="id_contrato"]').addEventListener('change', function () {
            const contratoId = this.value;
            if (contratoId) {
                fetch(`/Pagos/ObtenerNroPago?idContrato=${contratoId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.querySelector('input[name="nro_pago"]').value = data.nro_pago;
                    });
            } else {
                document.querySelector('input[name="nro_pago"]').value = '';
            }
        });
    </script>
}
