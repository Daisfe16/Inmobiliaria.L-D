@model InmobiliariaMVC.Models.Inquilino

@{
    ViewData["Title"] = "Nuevo Inquilino";
}

<h1>Nuevo Propietario</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Dni"></label>
        <input asp-for="Dni" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
