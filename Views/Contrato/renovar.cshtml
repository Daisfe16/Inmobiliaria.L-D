@model InmobiliariaMVC.Models.Contrato
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@{
    ViewData["Title"] = "Renovar Contrato";
}

<h2>Renovar Contrato</h2>

<form asp-action="Renovar" asp-controller="Contrato" method="post">
    @Html.AntiForgeryToken()   
    <input type="hidden" asp-for="id_inquilino" />
    <input type="hidden" asp-for="id_inmueble" />

    <div class="form-group">
        <label>Inquilino</label>
        <input type="text" value="@Model.Inquilino?.nombre @Model.Inquilino?.apellido" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Inmueble</label>
        <input type="text" value="@Model.Inmueble?.direccion" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Fecha Inicio</label>
        <input asp-for="fecha_inicio" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Fecha Fin</label>
        <input asp-for="fecha_fin" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Monto</label>
        <input asp-for="monto" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar Renovaci√≥n</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</form>


