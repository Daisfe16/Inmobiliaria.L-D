@model IEnumerable<InmobiliariaMVC.Models.Pago>
@{
    ViewBag.Title = "Pagos del Contrato";
    var contratoId = ViewBag.ContratoId;
}

<h2>Pagos del Contrato @contratoId</h2>

<div class="mb-3">
    <a class="btn btn-success" href="@Url.Action("CreatePorContrato", "Pagos", new { idContrato = contratoId })">âž• Agregar Pago a este Contrato</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nro Pago</th>
            <th>Fecha</th>
            <th>Detalle</th>
            <th>Importe</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr class="@(pago.estado ? "" : "table-danger")">
                <td>@pago.nro_pago</td>
                <td>@pago.fecha.ToString("dd/MM/yyyy")</td>
                <td>@pago.detalle</td>
                <td>@pago.importe.ToString("C")</td>
                <td>@(pago.estado ? "Activo" : "Anulado")</td>
            </tr>
        }
    </tbody>
</table>
