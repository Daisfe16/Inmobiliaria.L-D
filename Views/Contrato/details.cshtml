@model InmobiliariaMVC.Models.Contrato

@{
    ViewData["Title"] = "Detalle del Contrato";
}

<h2>Detalle del Contrato</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Inquilino</dt>
        <dd class="col-sm-9">@Model.Inquilino?.nombre @Model.Inquilino?.apellido</dd>

        <dt class="col-sm-3">Inmueble</dt>
        <dd class="col-sm-9">@Model.Inmueble?.direccion</dd>

        <dt class="col-sm-3">Monto</dt>
        <dd class="col-sm-9">@Model.monto</dd>

        <dt class="col-sm-3">Fecha inicio</dt>
        <dd class="col-sm-9">@Model.fecha_inicio.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Fecha fin</dt>
        <dd class="col-sm-9">@Model.fecha_fin.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@(Model.estado ? "Activo" : "Cerrado")</dd>

        <dt class="col-sm-3">Fecha creaci√≥n</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Fecha cierre</dt>
        <dd class="col-sm-9">@(Model.ClosedAt?.ToString("dd/MM/yyyy") ?? "-")</dd>

        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-3">Creado por</dt>
            <dd class="col-sm-9">@Model.CreatedByUser?.nombre @Model.CreatedByUser?.apellido</dd>

            @if (Model.ClosedByUserId != null)
            {
                <dt class="col-sm-3">Finalizado por</dt>
                <dd class="col-sm-9">@Model.ClosedByUser?.nombre @Model.ClosedByUser?.apellido</dd>
            }
        }
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
