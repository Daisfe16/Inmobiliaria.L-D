@model IEnumerable<InmobiliariaMVC.Models.Contrato>
@{
    ViewData["Title"] = "Lista de Contratos";
}

<h2>Lista de Contratos</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Contrato</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Monto</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Estado</th>
            <th>Fecha Creación</th>
            <th>Fecha Cierre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.id_contrato</td>
                <td>@c.Inquilino?.nombre @c.Inquilino?.apellido</td>
                <td>@c.Inmueble?.direccion</td>
                <td>@c.monto</td>
                <td>@c.fecha_inicio.ToShortDateString()</td>
                <td>@c.fecha_fin.ToShortDateString()</td>
                <td>@(c.estado ? "Activo" : "Finalizado")</td>
                <td>@c.CreatedAt.ToShortDateString()</td>
                <td>@(c.ClosedAt.HasValue ? c.ClosedAt.Value.ToShortDateString() : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.id_contrato" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Renovar" asp-route-id="@c.id_contrato" class="btn btn-sm btn-success">Renovar</a>

                    @if (c.estado)
                    {
                        <button type="button" class="btn btn-sm btn-warning"
                                onclick="confirmarTerminacion(@c.id_contrato, '@c.fecha_fin.ToString("yyyy-MM-dd")')">
                            Terminar
                        </button>
                    }

                    <a asp-action="Details" asp-route-id="@c.id_contrato" class="btn btn-sm btn-info">Detalles</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="DeleteConfirmed" asp-route-id="@c.id_contrato" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('¿Seguro que quieres eliminar este contrato?');">Eliminar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalMulta" tabindex="-1" aria-labelledby="modalMultaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalMultaLabel">Finalización anticipada</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="mensajeMulta"></p>
            </div>
            <div class="modal-footer">
                <form id="formAplicarMulta" method="post" asp-action="TerminarConMulta" asp-controller="Contrato">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="idContrato" />
                    <button type="submit" class="btn btn-danger">Aplicar Multa</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function confirmarTerminacion(idContrato, fechaFin) {
    const hoy = new Date().toISOString().split('T')[0];

    if (hoy < fechaFin) {
        fetch(`/Contrato/CalcularMulta?contratoId=${idContrato}`)
            .then(res => res.json())
            .then(data => {
                document.getElementById("mensajeMulta").innerText =
                    `Está finalizando el contrato antes de tiempo. Se aplicará una multa de un total de: $${data.monto}.`;

                document.getElementById("idContrato").value = idContrato;

                var modal = new bootstrap.Modal(document.getElementById('modalMulta'));
                modal.show();
            })
            .catch(err => {
                console.error("Error al calcular la multa:", err);
                alert("No se pudo calcular la multa. Intente nuevamente.");
            });
    } else {
        var form = document.createElement("form");
        form.method = "post";
        form.action = `/Contrato/Terminar/${idContrato}`;

        var token = document.createElement("input");
        token.type = "hidden";
        token.name = "__RequestVerificationToken";
        token.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
        form.appendChild(token);

        document.body.appendChild(form);
        form.submit();
    }
}
</script>
}
