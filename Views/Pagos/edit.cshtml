@model InmobiliariaMVC.Models.Pago

@{
    ViewBag.Title = "Editar Pago";
    bool isActivo = Model.estado;
}

<h2>Editar Pago</h2>

@if (!isActivo)
{
    <div class="alert alert-warning">
        Este pago está anulado y no se puede editar.
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id_pago" />

    <div class="form-group">
        <label>Número de Pago</label>
        <input class="form-control" value="@Model.nro_pago" disabled />
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input class="form-control" value="@Model.fecha.ToString("dd/MM/yyyy")" disabled />
    </div>

    <div class="form-group">
        <label>Importe</label>
        <input class="form-control" value="@Model.importe.ToString()" disabled />
    </div>

    <div class="form-group">
        <label>Detalle</label>
        @if (isActivo)
        {
            <input asp-for="detalle" class="form-control" />
        }
        else
        {
            <input asp-for="detalle" class="form-control" disabled />
        }
        <span asp-validation-for="detalle" class="text-danger"></span>
    </div>

    @if (isActivo)
    {
        <button type="submit" class="btn btn-primary">Guardar</button>
    }
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
</form>
